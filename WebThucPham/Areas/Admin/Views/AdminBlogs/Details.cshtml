@model WebThucPham.Models.Blog

@{
    ViewBag.Title = "Chi tiết tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index","AdminHome", new { area = "Admin"})" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="@Url.Action("Index","AdminBlogs", new { area = "Admin"})">Danh sách Tin tức</a>
            <span class="breadcrumb-item active">Chi tiết tin: @Model.Title</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Chi tiết tin</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.ID</td>
                    </tr>
                    <tr>
                        <td>Chủ Đề</td>
                        <td>@Model.Title</td>
                    </tr>

                    <tr>
                        <td>Nội dung</td>
                        <td>@Html.Raw(Model.Content)</td>
                    </tr>
                    <tr>
                        <td>Ngày Tạo</td>
                        <td>@Model.CreateAt</td>
                    </tr>
                    <tr>
                        <td>Hình Ảnh</td>
                        <td>@Model.Image</td>
                    </tr>
                    <tr>
                        <td>Trạng Thái</td>
                        <td>
                            @if (Model.Active == true)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Active</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Disable</div>
                                </div>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.ActionLink("Sửa tin này", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary btn-tone" })
