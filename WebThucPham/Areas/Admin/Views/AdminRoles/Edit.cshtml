@model WebThucPham.Models.Role

@{
    ViewBag.Title = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="@Url.Action("Index","AdminHome", new { area = "Admin"})" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="@Url.Action("Index","AdminRoles", new { area = "Admin"})">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
<div class="form-row">
    <div class="form-group col-md-6">
        <label class="col-sm-2 col-form-label">RoleName</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Name, new { placeholder = "Role Name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-6">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Describe, new { placeholder = "Description", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Describe, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-xs">Lưu thay đổi</button>
        </div>
    </div>
</div>
}