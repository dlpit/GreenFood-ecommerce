@{
    var arrival = (List<WebThucPham.Models.Product>)ViewBag.ArrivalProducts;
}

@{
    /*Định dạng theo tiền việt nam*/
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

@foreach (var item in arrival)
{
    var url = "/Product/" + item.Category.Thumb + "/chi-tiet-" + item.ID;
    <div class="swiper-slide">
        <div class="product-item">
            <div class="product-img img-zoom-effect" style=" text-align: center;">
                <a href="@url">
                    <img style="width: 263px; height: 292px" class="img-full" src="@item.Image" alt="Product Images">
                </a>
                <div class="product-add-action">
                    <ul>
                        <li>
                            <a href="cart.html" class="btnAddToCart" data-id="@item.ID">
                                <i class="pe-7s-cart"></i>
                            </a>
                        </li>
                        <li>
                            <a href="compare.html">
                                <i class="pe-7s-shuffle"></i>
                            </a>
                        </li>
                        <li>
                            <a href="wishlist.html">
                                <i class="pe-7s-like"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <a class="product-name" href="@url">@item.Name</a>
                <div class="price-box pb-1">
                    <span class="new-price">@String.Format(format, "{0:c0}", item.Price)</span>
                </div>
                <div class="rating-box">
                    <ul>
                        <li><i class="pe-7s-star"></i></li>
                        <li><i class="pe-7s-star"></i></li>
                        <li><i class="pe-7s-star"></i></li>
                        <li><i class="pe-7s-star"></i></li>
                        <li><i class="pe-7s-star"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

}
